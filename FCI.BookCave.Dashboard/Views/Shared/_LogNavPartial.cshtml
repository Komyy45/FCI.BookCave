@using FCI.BookCave.Domain.Entities.Identity
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> _signInManager;

	<ul class="navbar-nav">

	@if (_signInManager.IsSignedIn(User))
	{
		<li class="nav-item"><a  class="nav-link text-dark">Hello, @User.Identity.Name</a></li>

		<li class="nav-item">
			<form asp-controller="Account" asp-action="Logout" method="post">
				<button type="submit" class="btn btn-outline-light text-black">Logout</button>
			</form>
		</li>
	}
	else
	{
@* 		<li class="nav-item"><a asp-controller="Account" asp-action="Register" class="nav-link text-dark">Register</a></li>
 *@
		<li class="nav-item"><a asp-controller="Account" asp-action="Login" class="nav-link text-dark">Login</a></li>
	}

	

	</ul>