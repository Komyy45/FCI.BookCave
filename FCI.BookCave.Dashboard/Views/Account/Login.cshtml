@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_AccountLayout";
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mt-1">
                <input asp-for="UserName"  class="form-control" placeholder="User Name" />
                <label asp-for="UserName" class="control-label"></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-floating mt-1">
                <input asp-for="Password" class="form-control" placeholder="User Name" />
                <label asp-for="Password" class="control-label"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating form-check mt-1 mx-lg-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RememberMe" />@Html.DisplayNameFor(Model=>
                    Model.RememberMe)
                </label>
            </div>
            <div class="form-group mt-3 float-end">
                <input type="submit" value="Login" class="btn btn-primary " />
                <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
